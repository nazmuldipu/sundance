---
layout: base.njk
pagename: specials-packages
permalink: "build/lodging/plan-your-stay/specials-packages/index.html"
permalinkBypassOutputDir: true
nickname: "lodging/plan-your-stay/specials-packages"
---
{% from 'molecules/filter.njk' import filter %}
{% from 'organisms/forms.njk' import lodging_form %}
{% from 'molecules/footer.njk' import footer %}
{% from 'molecules/newsletter.njk' import newsletter %}
{% from 'molecules/card.njk' import singleCard %}
{% from 'organisms/global-image.njk' import global_image %}
{% from 'macros.njk' import top_banner %}
{% from 'organisms/hero-corner_block.njk' import top_banner_right_bottom_container %}

---
{% set cardAllData = pageCMS['vertical-cards'].vertical_card_list %}
<section class="segment-outer segment-outer__margin">
    <section class="segment-inner text-left">
        {{ top_banner(pageCMS['top-banner'].global_image, heroCornerBlock) }}
    </section>
</section>

<section class="segment-outer bg-sn-4 px-4 pb-4">
    <section class="segment-inner text-center">
        {% if pageCMS['vertical-cards-title'] %}
            <header class="font-ivar lodging-plan-your-stay__cards--title">
                {{ pageCMS['vertical-cards-title'].simple_article.title | safe }}
            </header>
        {% endif %}
        <section class="lodging-plan-your-stay__cards">
            {% for item in cardAllData %}
                {{ singleCard(item = item.vertical_card, classes = ['card-container', 'lodging-plan-your-stay__single-card']) }}
            {% endfor %}
        </section>
    </section>
</section>

{{newsletter()}}
