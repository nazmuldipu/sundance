---
pagename: base
---

{% from "seo_tags.njk" import seo_tags with context %}
{% from "dump_data.njk" import dump_data with context %}


<!DOCTYPE html>
<html lang="en">
    <head>
    <!-- begin GraphQL data dump -->
    {{ dump_data({seoDump: false}) }}
    <!-- end GraphQL data dump-->

<!-- start Google Analytics -->
        {% if ga_id %}
            <script async src="https://www.googletagmanager.com/gtag/js?id={{ga_id}}"></script>
            <script>
                window.dataLayer = window.dataLayer || [];
                function gtag(){dataLayer.push(arguments);}
                gtag('js', new Date());
                gtag('config', '{{ga_id}}');
            </script>
        {% endif %}
<!-- end Google Analytics -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" href="favicon.svg" type="image/svg+xml">
        {{ seo_tags(pagename, seoData) }}
<!-- start critical css -->
        {% if critical_css %}
        <style>
            {{ critical_css | include }}
        </style>
        {% endif %}
<!-- end critical css -->
<!-- start sync css -->
        {% if sync_css %}
            <link rel="stylesheet" type="text/css" href="{{sync_css}}">
        {% endif %}
<!-- end sync css -->
<!-- start font preloads -->
        {% if data.preload_fonts %}
            {% for font in data.preload_fonts %}
                <link rel="preload" href="{{font.href}}" as="font" type="{{font.type}}" crossorigin>
            {% endfor %}
        {% endif %}
<!-- end font preloads -->
<!-- start scripts -->
        {% if defer_js %}
            <script src="{{defer_js}}" defer></script>
        {% endif %}
        {% if async_js %}
            <script src="{{async_js}}" async></script>
        {% endif %}
        {% if sync_js %}
            <script src="{{sync_js}}"></script>
        {% endif %}
        {% if module_js %}
            <script src="{{module_js}}" type="module"></script>
        {% endif %}
<!-- end scripts -->
    </head>
    <body class="preload page-{{pagename}}">
        {{content | safe}}
        <script>
            document.body.classList.remove("preload");
        </script>
    </body>
</html>