{% from "atoms/headings.njk" import h1, h2, h3, h4, h5, h6 %}
{% from "atoms/a.njk" import a, button_primary, button_secondary, view_details %}
{% from 'atoms/form-fields.njk' import checkboxes, form_fields, form_input %}
{% from 'atoms/tables.njk' import tables %}
{% from 'atoms/box.njk' import box %}
{% from 'atoms/box.njk' import text_container %}
{% from 'atoms/accordion.njk' import accordion %}

<header>
    {{ h1( copy='Atoms' ) }}
</header>
<section>
    <header>
        {{ h2( copy='Links' ) }}
    </header>
    <article>
        {{ a( id='myLink-1', copy='Click Me', href='http://example.com', target='_blank') }}<br>
        <br>
        {{ button_primary( href='http://example.com', copy='Book a Class', id='myButton-1', target='_blank' ) }}<br>
        <br>
        {{ button_secondary( href='http://example.com', copy='Book a Class', id='myButton-2', target='_blank' ) }}<br>
        <br>
        {{ view_details( copy='View Details', href='http://example.com', target='_blank' ) }}
    </article>
</section>
<section>
    <header>
        {{ h2( copy='Heading Tags' ) }}
    </header>
    <article>
        {{ h1( copy='H1 Tag' ) }}
        {{ h2( copy='H2 Tag' ) }}
        {{ h3( copy='H3 Tag' ) }}
        {{ h4( copy='H4 Tag' ) }}
        {{ h5( copy='H5 Tag' ) }}
        {{ h6( copy='H6 Tag' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Checkboxes' ) }}
    </header>
    <article>
        {{ checkboxes( copy='Mountain Homes', id='checkbox-1', name='checkbox', checkBoxNumber='13' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Form Fields' ) }}
    </header>
    <article>
        {{ form_fields( copy='Join', href='#', id='join' ) }}
        {{ form_input(datePicker) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Tables' ) }}
    </header>
    <article>
        {{ tables(tableData = tableData) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Box' ) }}
    </header>
    <article>
        {{ box( copy='Clinic Guide', amount = 90, limitCopy = 'Upto 5 People' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Text Container' ) }}
    </header>
    <article>
        {{ text_container( 
            copy='Let Creativity Flow', 
            texts = [
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tempor sagittis nulla congue placerat tristique viverra eget sed. Rhoncus imperdiet amet, feugiat neque, vitae scelerisque",
                "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tempor sagittis nulla congue placerat tristique viverra eget sed. Rhoncus imperdiet amet, feugiat neque, vitae scelerisque"
            ] 
        ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Accordion' ) }}
    </header>
    <section>
        {% for item in accordions %}
            {{ accordion( item ) }}
        {% endfor %}
    </section>
</section>
