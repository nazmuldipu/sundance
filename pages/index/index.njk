<section style="padding-top:3rem">
    <div></div>
</section>

<section>
    {{ horrizontalCard(horizontalCardImage) }}
</section>

<section style="padding-bottom:3rem">
    <div></div>
</section>

<section class="card-sample__example grid grid-cols-3 gap-x-2 gap-y-2">
    {{ card(cardImage) }}
    {{ card(cardImage2) }}
    {{ card(cardImage3) }}
    {{ card(cardImage4) }}
    {{ card(cardImage5) }}
    {{ card(cardImage6) }}
    {{ card(cardImage7) }}
    {{ card(cardImage8) }}
    {{ card(cardImage9) }}
    {{ card(cardImage10) }}
</section>
<section>
    {{ secondBridge(bridgeItems) }}
</section>
<section style="padding-bottom:3rem">
    <div></div>
</section>
<section>
    {{ artStudio(artInstructor) }}
</section>
<header>
    {{ h1( copy='Molecules' ) }}
</header>

<div class="lodgingWidget">
{% for object in  lodginObject%}
    <div>
    {{lodgingWidget(object)}}
    </div>
{% endfor %}
</div>

<section class="segment-outer">
    <section class="segment-inner">
        <header>
            {{ h3( copy='Details Widget 1' ) }}
        </header>
        {{ details_widget_desktop(
            detailsData = detailsObject, 
            dropdown1 = detailsWidgetDropdown1, 
            dropdown2 = detailsWidgetDropdown2) 
        }}
        <header>
            {{ h3( copy='Details Widget 2' ) }}
        </header>
        {{ details_widget_mobile(
            detailsData = detailsObject2,
            dropdown1 = detailsWidgetDropdown3, 
            cta = widgetCTA) 
        }}
    </section>
</section>
<section class="segment-outer">
    <section class="segment-inner">
        <header>
            {{ h3( copy='Lodging Forms' ) }}
        </header>
        {{ lodging_form(item = lodgingForm) }}
    </section>
</section>

<section class="segment-outer">
    <section class="segment-inner">
        {{ amenities(item = amenitiesData) }}
    </section>
</section>

{{ h2( copy='Group Venues' ) }}
{% for event in groupVenue %}
    <section class="group-section">
        <div class="bridge__top-frame"></div>
        <div class="group-container">
            {{groupVenues(event)}}
        <div>
    </section>
{% endfor %}

{{ h2( copy='Filters' ) }}
{{filter(filters)}}

{{bridge()}}

{{newsletter()}}

{{footer(data.footer)}}
