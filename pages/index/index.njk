{% from 'organisms/global-image.njk' import global_image %}
<header>
    {{ h1( copy='Image' ) }}
</header>
{{global_image(pageCMS['test-image'].global_image, classes='happenings_1 inline-block xmed:border-1 border-mar-main-3 w-full')}}

<header>
    {{ h1( copy='Atoms' ) }}
</header>
<section>
    <header>
        {{ h2( copy='Buttons' ) }}
    </header>
    <article>
        {{ a( id='myLink-1', copy='sample page', href='/sample', target='_blank') }}<br>
        <br>
        {{ button_primary( href='http://example.com', copy='Book a Class', id='myButton-1', target='_blank' ) }}<br>
        <br>
        {{ button_secondary( href='http://example.com', copy='Book a Class', id='myButton-2', target='_blank' ) }}<br>
        <br>
        {{ view_details( copy='View Details', href='http://example.com', target='_blank' ) }}
        <br>
        <!-- unfortunately, the dropdown buttons rely on z-index to dropdown above content below, and so, stacking dropdowns require an explicit z-index set on the former buttons -Alex Oct 24, 2021 -->
        <div style="position: relative; z-index: 2;">
            {{ dropdown( copy='Book A Class', labelId='dropdown-1', items=dropdownItems1 ) }}
        </div>
        {{ dropdown( classes=['dropdown-container--secondary'], labelClasses=['button--secondary', 'button', 'text-base'], copy='Book Another Class', labelId='dropdown-2', items=dropdownItems2 ) }}
        {{ dropdown( classes=['dropdown-container--primary2'], labelClasses=['button--primary2', 'button', 'text-base'], copy='Book Another Class', labelId='dropdown-3', items=dropdownItems1 ) }}
        <br>
    </article>
</section>
<section>
    <header>
        {{ h2( copy='Heading Tags' ) }}
    </header>
    <article>
        {{ h1( copy='H1 Tag' ) }}
        {{ h2( copy='H2 Tag' ) }}
        {{ h3( copy='H3 Tag' ) }}
        {{ h4( copy='H4 Tag' ) }}
        {{ h5( copy='H5 Tag' ) }}
        {{ h6( copy='H6 Tag' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Checkboxes' ) }}
    </header>
    <article>
        {{ checkboxes( copy='Mountain Homes', id='checkbox-1', name='checkbox', checkBoxNumber='13' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Form Fields' ) }}
    </header>
    <article>
        {{ form_input(obj = emailInput, suffix = true, classes = ['form-label', 'block'], copy = 'Join', href = '#', id = 'join') }}
        {{ form_input(obj = datePicker) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Tables' ) }}
    </header>
    <article>
        {{ tables(tableData = tableData) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Box' ) }}
    </header>
    <article>
        {{ box( copy='Clinic Guide', amount = 90, limitCopy = 'Upto 5 People' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Text Container' ) }}
    </header>
    <section>
        {{ text_container( 
            title = 'Let Creativity Flow', 
            copy = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed tempor sagittis nulla congue placerat tristique viverra eget sed. Rhoncus imperdiet amet, feugiat neque, vitae scelerisque' 
        ) }}
    </section>
</section>
<section>
    <header>
        {{ h3( copy='Accordion' ) }}
    </header>
    <section>
        {% for item in accordions %}
            {{ accordion( item = item ) }}
        {% endfor %}
    </section>
</section>
<section>
    <header>
        {{ h3(copy = 'Social Media') }}
    </header>
    <section class="flex align-items-center gap-x-2">
        {{ iconImage( src='images/facebook.svg', alt='Facebook icon' ) }}<br>
        {{ iconImage( src='images/twitter.svg', alt='Twitter icon' ) }}<br>
        {{ iconImage( src='images/instagram.svg', alt='Instagram icon' ) }}<br>
        {{ iconImage( src='images/youtube.svg', alt='YouTube icon' ) }}<br>
        {{ iconImage( src='images/tripAdvisor.svg', alt='TripAdvisor icon' ) }}<br>
    </section>
</section>
<section>
    <header>
        {{ h3(copy = 'General') }}
    </header>
    <section class="flex align-items-center gap-x-2">
        {{ iconCSS( classes=['icon-css', 'arrow-down', 'down-rotate-45'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'arrow-up', 'rotate-45'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'arrow-right', 'rotate-45'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'arrow-left', 'rotate-45'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'cross-icon', 'rotate-45'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'plus-icon', 'rotate-90'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'hamburger-icon'] ) }}<br>
        {{ iconCSS( classes=['icon-css', 'icon--filter'], copy='<span></span><span></span><span></span>' ) }}<br>
    </section>
</section>
