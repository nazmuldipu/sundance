{% from "atoms/headings.njk" import h1, h2, h3, h4, h5, h6 %}
{% from "atoms/a.njk" import a, button_primary, button_secondary, view_details %}
{% from 'atoms/checkboxes.njk' import checkboxes %}
{% from 'atoms/form-fields.njk' import form_fields %}
{% from 'atoms/tables.njk' import tables %}
{% from 'atoms/box.njk' import box %}
{% from 'atoms/box.njk' import text_container %}
{% from 'atoms/accordion.njk' import accordion %}

<header>
    {{ h1( copy='Atoms' ) }}
</header>
<section>
    <header>
        {{ h2( copy='Links' ) }}
    </header>
    <article>
        {{ a( href='http://example.com', copy='Click Me', id='myLink-1', target='_blank') }}<br>
        <br>
        {{ button_primary( href='http://example.com', copy='Book a Class', id='myButton-1', target='_blank' ) }}<br>
        <br>
        {{ button_secondary( href='http://example.com', copy='Book a Class', id='myButton-2', target='_blank' ) }}<br>
    </article>
</section>
<section>
    <header>
        {{ h2( copy='Heading Tags' ) }}
    </header>
    <article>
        {{ h1( copy='H1 Tag' ) }}
        {{ h2( copy='H2 Tag' ) }}
        {{ h3( copy='H3 Tag' ) }}
        {{ h4( copy='H4 Tag' ) }}
        {{ h5( copy='H5 Tag' ) }}
        {{ h6( copy='H6 Tag' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Checkboxes' ) }}
    </header>
    <article>
        {{ checkboxes( copy='Mountain Homes', id='checkbox-1', name='checkbox', checkBoxNumber='13' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='View Details' ) }}
    </header>
    <article>
        {{ view_details( copy='View Details', href='http://example.com', target='_blank' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Form Fields' ) }}
    <header>
    <article>
        {{ form_fields( copy='Join', href='#', id='join' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Tables' ) }}
    </header>
    <article>
        {{ tables() }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Box' ) }}
    </header>
    <article>
        {{ box( copy='Clinic Guide' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Text Container' ) }}
    </header>
    <article>
        {{ text_container( copy='Let Creativity Flow' ) }}
    </article>
</section>
<section>
    <header>
        {{ h3( copy='Accordion' ) }}
    </header>
    <article>
        {{ accordion( copy='Mountain Stone Massage', id='toggle-1', name='First' ) }}
    </article>
</section>
