---
layout: base.njk
pagename: careers
permalink: "build/about/careers/index.html"
permalinkBypassOutputDir: true
nickname: "about/careers"
---

{% from "atoms/headings.njk" import h2 %}
{% from 'molecules/footer.njk' import footer %}
{% from 'molecules/newsletter.njk' import newsletter %}
{% from 'organisms/global-image.njk' import global_image %}
{% from 'molecules/group-venues.njk' import groupVenues %}

{% set groupVenue = pageCMS['group-venues'].group_venues %}

<section class="group-section">
    <section class="segment-outer relative -z-1">
        <figure>
        {% if pageCMS['top-banner'] and pageCMS['top-banner'].global_image %}
            {{global_image(pageCMS['top-banner'].global_image, classes='image_frame sm:3:2 lg:2:1 2xl:2:1 4xl:2:1')}}
        {% endif %}
        </figure>
    </section>
    {% if pageCMS['top-group-venues'] %}
        {% set groupData = pageCMS['top-group-venues'].group_venues %}
        {% for event in groupData %}
            <section class="group-container">
                {{ groupVenues(event) }}
            </section>
        {% endfor %}
    {% endif %}
    {# Simple Article #}
    {% if pageCMS['our-mission'] %}
        <article class="careers__text-container font-ivar">
            <header>
                {{ h2(copy = pageCMS['our-mission'].simple_article.title, classes = ['careers__text-container__header']) }}
            </header>
            <div class="careers__text-container__copy font-ivar">
                {{ pageCMS['our-mission'].simple_article.description | safe }}
            </div>    
        </article>
    {% endif %}        
</section>
{{newsletter()}}
