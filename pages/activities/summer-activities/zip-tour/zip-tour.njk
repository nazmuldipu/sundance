<article class="zip-tour__text-container font-ivar">
    <header>
        {{ h1(copy = textAllData.title, classes = ['zip-tour__text-container__header']) }}
    </header>
    {% for item in textAllData.descriptions %}
        <p class = "zip-tour__text-container__copy">{{ item.text | safe }}</p>
    {% endfor %}    
</article>

<section class="zip-tour__section-outer">
    <section class="zip-tour__section-inner zip-tour__action-card">
        {% for item in action_card %}
              {{ secondBridge(item) }}
        {% endfor %}
        <div class="zip-tour__action-card__text-wrapper zip-tour__action-card__caption">
           {{action_card_caption.description | safe}}
        </div>
    </section>
</section> 
{# Card Title #}
{{ h2(copy = card_title.title, classes = ['zip-tour__header', 'text-center', 'font-ivar', 'font-medium', 'text--color__sn-6']) }}

{# Vertical Card Section #}
<section class="zip-tour__section-outer">
    <section class="zip-tour__section-inner zip-tour__card">
        {% for item in vertical_card_list %}
            {{ verticalCard(item = item.vertical_card, card_container = ['card-container', 'mb-8']) }}
        {% endfor %}
    </section>
</section>