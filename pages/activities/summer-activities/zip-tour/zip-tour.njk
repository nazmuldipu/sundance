{% set textAllData = pageCMS['zip-tour-text-container'].text_container  %}
{% set action_card = pageCMS['zip-tour-action-card'].action_card %}
{% set action_card_caption = pageCMS['zip-tour-action-card-caption'].simple_article %}
{% set card_title= pageCMS['card-title'].simple_article %}
{% set vertical_card_list= pageCMS['vertical-cards'].vertical_card_list %}

{# Navigation Menu  #}
{{ navMenu(data.navMenuLink) }}
<section class="zipTour__margin-top"></section>

{# Hero Image Section #}
{% for event in zipTour_group_venues %}
    <section class="group-section">
        <section class="segment-outer relative">
            <figure class="segment-inner">
                {{global_image(pageCMS['top-banner'].global_image, classes='-z-1 h-screen w-full image_frame sm:3:4 lg:3:4 2xl:16:9 4xl:9:16')}}
            </figure>
        </section>
        <div class="group-container zip-tour__group-container">
            {{groupVenues(event)}}
        <div>
    </section>
{% endfor %}

