{% from "atoms/headings.njk" import h1, h2, h3, h4, h5, h6 %}
{% from 'molecules/card.njk' import verticalCard %}
{% from 'molecules/newsletter.njk' import newsletter %}
{% from 'organisms/global-image.njk' import global_image %}
{% from 'molecules/group-venues.njk' import groupVenues %}
{% from 'molecules/bridge.njk' import bridge %}
{% from 'atoms/accordion.njk' import accordion %}

<section class="page-top-adjust"></section>

{# Hero Image Section #}
{% if pageCMS['group-venues'].group_venues.length and pageCMS['top-banner'].global_image %}
{% set winter_group_venues = pageCMS['group-venues'].group_venues  %}
<section class="group-section">
    <section class="segment-outer relative -z-1">
        <figure class="segment-inner">
            {{global_image(pageCMS['top-banner'].global_image, classes='w-full image_frame sm:3:4 lg:2:1 2xl:2:1 4xl:2:1')}}
        </figure>
    </section> 
    {% for event in winter_group_venues %}
        <div class="group-container">
            {{groupVenues(event)}}
        <div>
    {% endfor %}
</section>
{% endif %}

{# Bridge carousal #}
{% if pageCMS['bridge-slider'] %}
{% set bridge_slider = pageCMS['bridge-slider'].bridge_slider %}
    {{ bridge(bridge_slider) }}        
{% endif %}

{# Simple Article #}
{% if pageCMS['simple-article'] %}
    {% set simple_article = pageCMS['simple-article'].simple_article  %}
    <article class="winter-article__container font-ivar">
        <header>
            {{ h1(copy = simple_article.title, classes = ['winter-article__header']) }}
        </header>
        <div class = "winter-article__copy">{{ simple_article.description | safe }}</div>
    </article>
{% endif %}

{# Card Title #}
{% if pageCMS['card-title'] %}
    {% set card_title= pageCMS['card-title'].simple_article %}
    {{ h2(copy = card_title.title, classes = ['winter-card__header', 'text-center', 'font-ivar', 'font-medium', 'text--color__sn-6']) }}
{% endif %}

{# Vertical Card Section #}
{% if  pageCMS['vertical-cards'] %}
{% set vertical_card_list= pageCMS['vertical-cards'].vertical_card_list %}
<section class="section-outer">
    <section class="section-inner winter__card">
        {% for item in vertical_card_list %}
            {{ verticalCard(item = item.vertical_card, card_container = ['card-container', 'mb-8']) }}
        {% endfor %}
    </section>
</section>
{% endif %}

{{newsletter()}}