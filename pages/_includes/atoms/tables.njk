{% macro tables( tableData = {} ) %}

    <table class="table-container w-full">
        <thead>
            <tr class="table-row table-header">
                {% for header in tableData.headers %}
                    <th class="row-item">
                        {{ header }}
                    </th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            {% for body in tableData.bodies %}
                <tr class="table-row">
                    {% for data in body.datas %}
                        <td class="row-item-data">
                            {{ data }}
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endmacro %}