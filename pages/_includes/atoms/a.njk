    #   @author Alexander Khost, Sarjis
#}
{% macro a( classes=['link', 'link--primary', 'font-calibre', 'text-base'], id, copy, href='#', target )%}
    <a
        href="{{ href }}"
        class="{% for class in classes %} {{ class }} {% endfor %}"
        {% if id %} id="{{ id }}" {% endif %}
        {% if target %} target="{{ target }}" {% endif %}
    >
        {{ copy | safe }}
    </a>
{% endmacro %}

