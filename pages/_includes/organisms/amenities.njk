{% from "atoms/headings.njk" import h2, h6 %}
{% from "atoms/a.njk" import view_details %}
{# 
    #   @desc   amenities
    #   @param  item       object (data from json file)
    #   @return HTML article
    #   @author Sarjis
 #}
{% macro amenities( item = {}) %}
    <article class="amenities">
        <header>
            {{ h2(copy = item.heading, classes = ['details-widget--heading', 'font-ivar', 'text-center']) }}
        </header>
        {% for data in item.amenities %}
            <div class="amenities__features-container">
                <header class="amenities__features--header">
                    <h1> {{ data.title }} </h1>
                </header>
                <ul class="amenities__features--item-container grid-cols-2">
                {% for object in data.features %}
                    <li class="amenities__features--item">
                        {{object.icon | safe}}
                        <span class="amenities-view-details font-calibre text-base pl-4">
                            {{object.copy}}
                        </span>
                    </li>
                {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </article>
{% endmacro %}
