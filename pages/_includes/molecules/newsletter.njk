{% macro newsletter( )%}
   <section class="newsletter">
        {{ h2( copy='Stay in the loop on exclusive deals & events.', classes=['newsletter__heading', 'font-ivar']) }}
        {% set obj = {
            "label" : "", 
            "type" : "email", 
            "placeholder" : "Email Address", 
            "classes" : ['newnletter__input', 'font-calibre']
        } %}
        <div>
            {{ form_input(obj = obj) }}
        </div>
        {{Button('Subscribe', classes=['bg-primary2', 'font-calibre', 'text-white', 'newsletter__btn'])}}
   </section>
{% endmacro %}
