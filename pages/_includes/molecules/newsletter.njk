{% from "atoms/headings.njk" import h2 %}
{% from "atoms/a.njk" import Button %}
{% from "atoms/form-fields.njk" import form_input%}
{#
    #   @desc   newsletter form
    #   @author Nazmul Alam
#}
{% macro newsletter( )%}
    <section class="newsletter">
        {{ h2( copy='Stay in the loop on exclusive deals & events.', classes=['newsletter__heading', 'font-ivar']) }}
        {% set obj = {
            "label" : "", 
            "type" : "email", 
            "placeholder" : "Email Address", 
            "classes" : ['newnletter__input', 'font-calibre']
        } %}
        <form-sender data-type="newsletter">
            <form>
                <div>
                    {{ form_input(obj = obj) }}
                </div>
                {{Button('Subscribe', classes=['submit__button', 'bg-primary2', 'font-calibre', 'text-white', 'newsletter__btn'])}}
            </form>
            <div class="ajax__status">ajax</div>
        </form-sender>
    </section>
{% endmacro %}