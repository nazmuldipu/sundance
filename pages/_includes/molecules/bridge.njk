{% from "atoms/headings.njk" import h4,
ihh1 %}
{% from 'atoms/icons.njk' import iconCSS %}
{#
    #   @desc   a basic bridge molecules
    #   @param  classes  array, class names (optional)
    #   @param  id       string, a unique ID (optional)
    #   @param  copy     string, the HTML mark up that is linked
    #   @param  href     string, link url
    #   @param  target   string, the link target location (optional)
    #   @return HTML anchor tag
    #   @author Alexander Khost, Sarjis
#}
{% macro bridge(  )%}
    <section class="bridge">
        <article class="bridge-top-frame">
            <header>{{ihh1('Explore Your Creativity',classes = ['bridge-header', 'font-ivar'])}}</header>
            {{h4('EXPLORE GALLERY', classes=['bridge-text', 'font-calibre'])}}
        </article>

        <article class="bridge-container">
            <media-carousel>
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="bridge-box">a</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">b</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">c</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">d</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">e</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">f</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">g</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">h</div>
                        </div>
                        <div class="swiper-slide">
                            <div class="bridge-box">i</div>
                        </div>
                    </div>
                    <nav class="bridge-nav">
                        {{ iconCSS( classes=['carousel-button-prev', 'bridge-nav-icon', 'arrow-left', 'rotate-45'] ) }}
                        {{ iconCSS( classes=['carousel-button-next', 'bridge-nav-icon', 'arrow-right', 'rotate-45'] ) }}
                    </nav>

                </div>
            </media-carousel>

        </article>

    </section>
{% endmacro %}