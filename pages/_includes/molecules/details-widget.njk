{% from "atoms/headings.njk" import h2, h6 %}
{% from "atoms/a.njk" import a, dropdown, button_secondary %}
{# 
    #   @desc   details widget
    #   @param  detailsData       object (data from json file)
    #   @param  dropdownItems1       object (data from json file)
    #   @param  dropdownItems2       object (data from json file)
    #   @return HTML article
    #   @author Sarjis
 #}
{% macro details_widget_desktop(detailsData = {}, dropdownItems1 = {}, dropdownItems2 = {}) %}
    <article class="details-widget">
        <header>
            {{ h6(copy = detailsData.title, classes = ['details-widget--breadcrumbs-title','font-calibre', 'text-sm']) }}
            {{ h2(copy = detailsData.heading, classes = ['details-widget--heading', 'font-ivar']) }}
        </header>
        <p class="details-widget--text__small mx-auto font-calibre">
            {{ detailsData.p1 }}
        </p>
        <p class="details-widget--text__large mx-auto font-ivar">
            {{ detailsData.p2 }}
        </p>
        <div class="details-widget--actions justify-content-center gap-x-1">
            <div class="details-widget--actions__item">
                {{ dropdown( copy='Book A Class', labelId='details-widget-dropdown-1', items = dropdownItems1 ) }}
            </div>
            {{ dropdown( classes=['dropdown-container--secondary'], labelClasses=['button--secondary', 'button', 'text-base', 'font-calibre'], copy='Book A Class', labelId='details-widget-dropdown-2', items = dropdownItems2 ) }}
        </div>
        <ul class="details-widget--criteria-list mx-auto">
            {% set class = 'flex details-widget--criteria-list__item border-b-1 border--color__sp-4' %}
            {% for item in detailsData.criteria_items %}
                <li class="{{ class }}">
                    <div class="font-ivar">{{ item.title }}</div>
                    <div class="font-calibre">{{ a(copy = item.url) }}</div>
                </li>
            {% endfor %}
        </ul>
    </article>
{% endmacro %}

{# 
    #   @desc   details widget
    #   @param  detailsData       object (data from json file)
    #   @param  dropdownItems       object (data from json file)
    #   @return HTML article
    #   @author Sarjis
 #}
{% macro details_widget_mobile(detailsData = {}, dropdownItems = {}) %}
    <article class="details-widget">
        <header>
            {{ h6(copy = detailsData.title, classes = ['details-widget--breadcrumbs-title','font-calibre', 'text-sm']) }}
            {{ h2(copy = detailsData.heading, classes = ['details-widget--heading','heading--2', 'font-ivar']) }}
        </header>
        <p class="details-widget--text__small mx-auto bg-ss-4 font-calibre">
            {{ detailsData.p1 }}
        </p>
        <p class="details-widget--text__large mx-auto font-ivar">
            {{ detailsData.p2 }}
        </p>
        {% if detailsData.p3 %}
            <p class="details-widget--text__colored font-ivar text--color__sp-1">
                {{ detailsData.p3 }}
            </p>
        {% endif %}
        <div class="details-widget--actions justify-content-center gap-x-1">
            <div class="details-widget--actions__item">
                {{ dropdown( copy='Book Now', labelId='details-widget-dropdown-3', items = dropdownItems ) }}
            </div>
            {{ button_secondary( href='http://example.com', copy='Book Now', id='myButton-4', target='_blank', classes = ['button--secondary', 'button', 'text-base', 'font-calibre'] ) }}
        </div>
        <ul class="details-widget--criteria-list mx-auto">
            {% set class = 'flex details-widget--criteria-list__item border-b-1 border--color__sp-4' %}
            {% for item in detailsData.criteria_items %}
                <li class="{{ class }}">
                    <div class="font-ivar">{{ item.title }}</div>
                    <div class="font-calibre">{{ a(copy = item.url) }}</div>
                </li>
            {% endfor %}
        </ul>
    </article>
{% endmacro %}
