{% macro details_widget_desktop() %}
    <article class="details-widget">
        <header>
            {{ h6(copy = detailsData2.title, classes = ['details-widget--breadcrumbs-title','font-calibre', 'text-sm']) }}
            {{ h2(copy = detailsData2.heading, classes = ['details-widget--heading', 'font-ivar']) }}
        </header>
        <p class="details-widget--text__small mx-auto font-calibre">
            {{ detailsData2.p1 }}
        </p>
        <p class="details-widget--text__large mx-auto font-ivar">
            {{ detailsData2.p2 }}
        </p>
        <div class="details-widget--actions justify-content-center gap-x-1">
            <div class="details-widget--actions__item" style="position: relative; z-index: 2;">
                {{ dropdown( copy='Book A Class', labelId='details-widget-dropdown-1', items = data.dropdownItems1 ) }}
            </div>
            {{ dropdown( classes=['dropdown-container--secondary'], labelClasses=['button--secondary', 'button', 'text-base', 'font-calibre'], copy='Book A Class', labelId='details-widget-dropdown-2', items = data.dropdownItems1 ) }}
        </div>
        <ul class="details-widget--criteria-list mx-auto">
            {% set class = 'flex details-widget--criteria-list__item border-b-1 border--color__sp-4' %}
            {% for item in detailsData2.criteria_items %}
                <li class="{{ class }}">
                    <div class="font-ivar">{{ item.title }}</div>
                    <div class="font-calibre">{{ a(copy = item.url) }}</div>
                </li>
            {% endfor %}
        </ul>
    </article>
{% endmacro %}

